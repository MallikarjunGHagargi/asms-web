$(document).ready(function () {
$(".abtright h4").animatext({speed: 100,
    effect: 'flipInX',
    infinite: false,
    onSuccess: function () {
        $(".txt_normal").css("display", "block");
        $(".txt_normal").animatext({
            speed: 200,
            onSuccess: function () {
                $(".txt_rvrse").css("display", "block");
                $(".txt_rvrse").animatext({speed: 100,
                    effect: 'tada',
                    reverse: true,
                    infinite: false,
                    onSuccess: function () {
                        $(".abtright h3").css("display", "block");
                        $(".abtright h3").animatext({speed: 150,
                            effect: 'tada',
                            random: true,
                            infinite: false,
                            onSuccess: function () {
                                $(".abtright span.lwrcs").css("display", "block");
                                $(".abtright span.lwrcs").animatext({speed: 200,
                                    mode: "words",
                                    effect: 'swing',
                                    infinite: false});
                            }

                        });
                    }
                });
            }
        });
    }
});
});


