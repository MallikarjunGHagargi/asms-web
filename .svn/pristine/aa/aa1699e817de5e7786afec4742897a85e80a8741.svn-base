@import url('https://fonts.googleapis.com/css?family=Raleway:400,500,600,700,800');

a:hover,a:focus {
    outline: none;
    text-decoration: none;
}

body{
    font-size: 14px;
    line-height: 22px;
    background: #222d32;
}

.main_sec, .lft_sec_tp, .lft_sec_btm, .usr_prvlg_sec,.usr_idn_sec, .rit_sec_tp, .rit_sec_bdy, .rit_bdy_hd,label, .form-head, .page-indica, .rit_sec_pg_head, .rit_bdy_sec_cnt, .std_flds_sec, .form_flds_sub{
    float: left;
    width:100%;
}

html, body, .main_sec, .lft_sec {
    height: 100%;
}

.lft_sec {
    float: left;
    width: 230px;
    background: #222d32;
}

.lft_sec_tp {
    background: #337fad;
    color: #fff;
    font-size: 22px;
    padding: 11px 15px;
    display: table;
}

.lft_sec_tp span.icon-bar {
    background: #fff;
}

.lft_sec_tp button.navbar-toggle {
    display: block;
    margin: 0;
}

.usr_idn_sec {
    color: #fff;
    padding: 25px 15px 32px;
    background: #1c292f;
}



.rit_sec{
    margin-left: 230px;
}


.rit_sec_tp, .rit_sec_bdy, .rit_sec_ftr{
    display: block;
}

.rit_sec_tp {
    background: #388dc0;
    color: #fff;
    padding: 8px 0;
}




.rit_sec_bdy {
    background-color: #ecf0f5;
    min-height: 930px;
    padding: 35px 45px;
}


.rit_sec_ftr{
    background: #fff;
    padding: 15px;
    color: #444;
    border-top: 1px solid #d2d6de;
}


.lft_sec_logo {
    display: table-cell;
    vertical-align: middle;
}

.usr_idn_sec img {
    border-radius: 60px;
    max-width: 55px;
    display: inline;
    margin-right: 15px;
}

#usr_idn_sec_rle {
    float: left;
}

#usr_idn_sec_img {
    float: left;
}

#usr_idn_sts {
    font-size: 10px;
}

#usr_idn_sts span.status {
    width: 8px;
    height: 8px;
    background: #0ece0e;
    border-radius: 31px;
    margin: 6px 4px 0px 0;
    float: left;
}

.usr_prvlg_sec {
    color: #b8c7ce;
}

ul.ctrl_usr {
    list-style: none;
    padding-left: 23px;
}

ul.ctrl_usr li {
    padding: 8px 15px;
    text-transform: uppercase;
    font-size: 12px;
}

ul.ctrl_usr li ul.ctrl_usr_sb {
    display: none;
}

.rit_sec_tp_rle {
    float: right;
}

.rit_sec_tp_rle #usr_idn_sec_img img {
    border-radius: 60px;
    max-width: 40px;
    display: inline;
    margin-right: 15px;
}

#usr_idn_sec_name {
    float: left;
    margin-top: 8px;
    font-size: 13px;
}

.ctrl_set_tp {
    float: right;
}

.ctrl_set_tp .fa {
    margin-top: 9px;
    float: left;
    font-size: 19px;
    padding: 0 15px;
}

.acd_yr {
    float: left;
}

.acd_yr input {
    display: inline;
    width: 103px;
    margin-right: 30px;
    font-size: 13px;
    height: 28px;
}

.prmy_btn {
    float: right;
    background: #398dc0;
    color: #fff;
    padding: 6px 20px 4px;
    border: none;
    text-transform: uppercase;
    font-size: 13px;
}

.form-head {
    color: #367fa9;
    font-size: 16px;
    margin: 15px 0 0;
    font-weight: 600;
    text-transform: uppercase;
    font-family: 'Raleway', sans-serif;
    letter-spacing: 0.5px;
}

.page-in {
    padding: 0;
    margin-top: 15px;
    margin-left: 27%;
}
.page-in li {
    display: inline-block;
    padding: 0 15px;
    background-image: url(../images/menudiv.png);
    background-position: right center;
    background-repeat: no-repeat;
    background-size: auto auto;
    float: left;
    list-style: outside none none;
    color: #222d32;
}

.page-in li a {
    color: #3c8dbc;
}

.page-in li:last-child {
    background: none;
}

.rit_sec_pg_head {
    border-bottom: 1px solid #b1b1b1;
    margin: 0 0 35px;
    padding: 0 0 6px;
}



.rit_bdy_hd {
    margin: 0 0 55px;
    background: #222d32;
    padding: 20px;
}

.form_flds_grp {
    margin: 0 0 30px;
    width: 25%;
    float: left;
    padding: 0 30px 0 0;
}

.std_crt_section input[type="checkbox"] {
    margin: 0px 3px 0 0;
}

.subject_crt_section {
    clear: left;
    width: 50%;
}

label.cus_sel_sec {
    float: left;
    width: 30px;
    margin: 0 20px 0 0;
    font-weight: normal;
    color: #333;
    font-size: 14px;
    text-transform: unset;
}

.form_flds_grp.std_crt_section {
    margin: 33px 0 30px;
    font-size: 17px;
}

.subject_crt_section label.cus_sel_sec {
    width: 150px;
    margin: 0 20px 5px 0;
}

.subject_crt_section input[type="checkbox"] {
    margin-right: 4px;
}

.secondary_btn {
    background: #53585a;
    padding: 4px 30px;
    text-transform: uppercase;
    font-weight: bold;
    color: #fff;
    border: none;
    font-size: 14px;
}

.form-control {
    border-radius: 0;
}

.std_flds_sec .form-control {
    width: 60%;
}

label {
    font-weight: normal;
    color: #398dc0;
    font-size: 15px;
    text-transform: uppercase;
}

.rit_bdy_hd label {
    color: #b8c7ce;
    font-size: 13px;
    width: auto;
    margin: 5px 40px 0 0;
}

div#example_wrapper {
    float: left;
    width: 100%;
    margin-top: 95px;
}

.form_flds_grp select {
    width: 60%;
}

.grd_std_grade_sec, .grd_std_standard_sec{
    display: none;
}

.form_flds_grp.std_flds input {
    width: 38%;
    float: left;
}

.form_flds_grp.std_flds button#btn1 {
    float: left;
    padding: 6px 9px 6px;
    font-size: 12px;
    letter-spacing: .5px;
}

div#example_filter {
    display: none !important;
}

.form_flds_grp input#add_subjects {
    width: 64%;
}